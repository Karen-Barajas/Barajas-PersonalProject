﻿﻿@{
    ViewData["Title"] = "Contact Us";
}

<h1 class="h-form text-center fw-bolder" style="color: ghostwhite; font-family:Garamond">Want more information?</h1>
<h1 class="h-form text-center fw-bolder" style="color: ghostwhite; font-family:Garamond">Fill out our form!</h1>
<br />

<div class="text-center">
    <form id="myForm" onsubmit="myFunction()">
        <label for="firstname">First Name</label>
        <input type="text" id="firstname" name="firstname" required /><br />
        <label for="lastname">Last Name</label>
        <input type="text" id="lastname" name="lastname" required /><br />
        <label for="address">Address</label>
        <input type="text" id="address" name="address" required /><br />
        <label for="city">City</label>
        <input type="text" id="city" name="city" required /><br />
        <label for="state">State</label>
        <input type="text" id="state" name="state" required /><br />
        <label for="email">Email</label>
        <input type="text" id="email" name="email" required /><br />
        <label for="phonenumber">Number</label>
        <input type="text" id="phonenumber" name="phonenumber" required /><br /><br />

        <fieldset>
            <legend>How would you like to be contacted?</legend>
            <br />
            <input type="checkbox" id="emailaddress" name="emailaddress" value="emailaddress" />
            <label for="emailaddress">Email</label>
            <input type="checkbox" id="phonecall" name="phonecall" value="phonecall" />
            <label for="phonecall">Call</label>
        </fieldset><br /><br />

        <label for="feedback">Write any questions or concerns you may have regarding our services.<br /> They'll be addressed when we contact you!</label><br />
        <textarea id="textbox" name="textbox" rows="5" cols="50"></textarea><br /><br />

        <button type="submit">Submit</button><br /><br />
        <button type="reset">Reset</button><br /><br />
    </form>
</div>
<br />